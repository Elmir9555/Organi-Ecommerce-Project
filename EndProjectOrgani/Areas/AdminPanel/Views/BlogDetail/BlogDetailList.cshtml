
@model Paginate<BlogDetail>
@{
    var count = 1;
}

<div class="row">
    <div class="container">
        <h3 style="text-align: center">BlogDetails Table</h3>
        <div class="create-btn" style="display:flex;justify-content:flex-end;padding-top:20px;padding-right: 20px;">
            <a asp-action="Create" asp-area="AdminPanel" asp-controller="BlogDetail" class="btn btn-success">Create</a>
        </div>
        <div class="tb">
            <div class="container mt-5">
                <div class="table-responsive">
                    <table class="table table-striped table-dark text-white table-hover">

                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th colspan="2">Blog Name</th>
                                <th colspan="2">Description</th>
                                <th colspan="2">CategoryName</th>
                                <th colspan="2">Tags</th>
                                <th style="text-align: center;padding-left:100px;">Process</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var saleoff in Model.Datas)
                            {
                                <tr>
                                    <td class="text-center" style="padding-top:18px">@count</td>
                                    <td colspan="2" style="padding-top:20px">
                                        <h6>@saleoff.Blog.Title</h6>
                                    </td>
                                    <td colspan="2" style="padding-top:20px">
                                        <h6 style="max-width:100px;overflow:auto;min-height:30px;">@saleoff.Description</h6>
                                    </td>
                                    <td colspan="2" style="padding-top:20px">
                                        <h6>@saleoff.CategoryName</h6>
                                    </td>
                                    <td colspan="2" style="padding-top:20px">
                                        <h6>@saleoff.Tags</h6>
                                    </td>

                                    <td style="display: flex;gap:25px;justify-content:flex-end;">
                                        <a asp-action="Details" asp-controller="BlogDetail" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-primary" style="color:white">Detail</a>
                                        <a asp-action="Update" asp-controller="BlogDetail" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-info">Update</a>
                                        <a asp-action="Delete" asp-controller="BlogDetail" asp-area="AdminPanel" asp-route-id="@saleoff.Id" class="btn btn-danger" style="color:white">Delete</a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row my-3 justify-content-center">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination ">
                            <li class="page-item @(Model.HasPrevious ? "": "disabled")">
                                <a class="page-link" asp-action="BlogDetailList" asp-area="AdminPanel" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="BlogDetailList" asp-area="AdminPanel" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNext ? "": "disabled")">
                                <a class="page-link" asp-action="BlogDetailList" asp-area="AdminPanel" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>