
@model Product

<div class="row">
    <div class="container">
        <div class="title" style="text-align: center;font-weight: bold;letter-spacing:2px;font-size:20px;color: rgba(0,0,0,0.2);">
            Create
        </div>
        <div class="tb">
            <div class="container mt-2">
                <form method="post" asp-action="Create" asp-controller="Product" asp-area="AdminPanel" enctype="multipart/form-data">
                    <div class="table-responsive pt-3">
                        <label asp-for="Name" style="padding-left:70px;">Name <sup>*</sup></label><br>
                        <input asp-for="Name" type="text" style="width:90%;border: none;margin-left: 70px;min-height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="Name" class="text-danger"></span>

                        <label asp-for="Price" style="padding-left:70px;">Price <sup>*</sup></label><br>
                        <input asp-for="Price" type="text" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="Price" class="text-danger"></span>

                        <label asp-for="Count" style="padding-left:70px;">Count <sup>*</sup></label><br>
                        <input asp-for="Count" type="number" style="width:90%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 20px;"><br><br>
                        <span asp-validation-for="Count" class="text-danger"></span>

                        <label asp-for="Photo" style="padding-left:70px;">Image <sup>*</sup></label><br>
                        <input asp-for="Photo" style="width:25%;border: none;margin-left: 70px;height:40px;background-color:white;color: black;padding-left: 10px;padding-top: 5px;">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="create" style="display:flex;justify-content:flex-end;padding-right: 35px;">
                        <button class="btn btn-success">Create</button>
                        <a asp-action="ProductList" asp-area="AdminPanel" asp-controller="Product" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
